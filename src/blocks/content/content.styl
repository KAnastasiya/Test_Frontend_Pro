.content
  flex 1 1 100% - (sidebar-width + 50px)
  padding 15px 10px 55px 35px
  background-color content-bg

  .content__wrapper_hidden
    display none

  &__row
    display flex
    flex-flow row nowrap
    justify-content space-between

    &:not(:last-of-type)
      margin-bottom 20px

  &__col
    margin 0
    line-height 1.1

    &:not(:last-of-type)
      padding-right 30px

  &__col_1_2
    flex 1 1 50%

  &__col_1_3
    flex 1 1 30%

  &__col_2_3
    flex 1 1 60%
